<resources>
    <style name="Theme.TemaPikmin" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/crema_claro</item>
    </style>

    <style name="TextoFondoRedondeado">
        <item name="android:background">@drawable/fondo_texto_pikmin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Titulos">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/verde_hierba</item>

    </style>

    <style name="DescripcionPantallaDetalles">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>
    
    <style name="TextosConfiguracion">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
</resources>
